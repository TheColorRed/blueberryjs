extends ../partials/head.pug
block title
    title Attribute Color Changer Example
block content
    h2.header Attribute Color Changer Example
    p.flow-text.card-panel You can easily access attributes from an element.
    h2.header Final Result
    style.
        .col > .btn {
            width: 100%;
        }
    script.
        Blueberry.register(
            class Attributes extends Component {
                created() {
                    if (this.attrs.initFg && this.attrs.initBg) {
                        let example = Blueberry.find('#example');
                        example.style.set('color', this.attrs.initFg);
                        example.style.set('background-color', this.attrs.initBg);
                    }
                }
                click() {
                    let example = Blueberry.find('#example');
                    switch (this.attrs.action) {
                        case 'init-fg': ; break;
                        case 'init-bg': example.style.set('color', this.attrs.color); break;
                        case 'fg': example.style.set('color', this.attrs.color); break;
                        case 'bg': example.style.set('background-color', this.attrs.color); break;
                    }
                }
            }
        );
    .row
        .col.s12
            .flow-text.card-panel#example(component='Attributes' init-bg='deeppink' init-fg='white') This is some test text
    .row
        .col.m3.s12
            button.btn.waves-effect(component='Attributes' action='fg' color='white') White Text
        .col.m3.s12
            button.btn.waves-effect(component='Attributes' action='fg' color='black') Black Text
        .col.m3.s12
            button.btn.waves-effect(component='Attributes' action='bg' color='deeppink') Pink Background
        .col.m3.s12
            button.btn.waves-effect(component='Attributes' action='bg' color='teal') Teal Background
